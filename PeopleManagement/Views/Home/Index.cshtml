@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="row content_main">
    <div id="home" class="main_box">
        <h1>Simple People Management Application</h1>        
    </div>

</div>
<div class="row main_search_box">
    <div class="col-md-2">
        <a href='@Url.Action("Register")' style="float: left">Add New User</a>
    </div>
</div>
<div class="row">
    <table class="table table-striped table-bordered table-hover dt-responsive" id="table-data">
        <thead>
            <tr>
                <th class="col-md-1">S/N</th>
                <th class="col-md-3">NRIC</th>
                <th class="col-md-2">Name</th>
                <th class="col-md-2">Gender</th>
                <th class="col-md-2">Age</th>
                <th class="col-md-2">NO. of Subjects</th>
            </tr>
        </thead>
    </table>
</div>


@section PluginScripts {
    @Scripts.Render("~/bundles/homepage")
}

@section Scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            HOMEPAGE.url_list = "@Url.Action("GetUsers", "Home")";
            @*HOMEPAGE.url_create_csv = "@Url.Action("CreateCsv", "Home")";
            HOMEPAGE.url_search = "@Url.Action("GetSeachValue", "Home")";*@
            HOMEPAGE.init_page();
        });
    </script>
}
